<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_routine_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sumon.studymate.RoutineWizerdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
       >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/twinty">

            <Spinner
                android:id="@+id/semesterListForRoutineSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_text_bg_badge"
                android:padding="@dimen/twinty"></Spinner>

        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/routineNextBtn"
            android:layout_margin="@dimen/twinty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_text_bg_badge"
            android:text="Next"
            android:padding="@dimen/twinty"/>


    </LinearLayout>
</LinearLayout>
