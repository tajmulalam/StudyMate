<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/tools"
    android:id="@+id/coursesCardView"
    android:layout_width="@dimen/three_hundred"
    android:layout_height="@dimen/two_hundred"
    android:clickable="false"
    android:layout_margin="@dimen/ten"
    android:foreground="?android:attr/selectableItemBackground"
    cardView:cardCornerRadius="@dimen/fifty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/ten"
        android:weightSum="5">

        <TextView
            android:id="@+id/courseTitleTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Course Name"
            android:textSize="@dimen/twinty" />


        <TextView
            android:id="@+id/courseCodeTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="" />
        <TextView
            android:id="@+id/courseCreditTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/courseCredit" />
        <TextView
            android:id="@+id/courseTeacherTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/teacherName" />
        <TextView
            android:id="@+id/courseSemesterTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/semesterTitle" />
        <LinearLayout
            android:paddingTop="@dimen/ten"
            android:layout_width="@dimen/one_hundred_fifty"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/courseEditBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/five"
                android:background="@drawable/ic_text_bg_badge"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/courseDeleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_text_bg_badge"
                android:src="@android:drawable/ic_delete" />


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
