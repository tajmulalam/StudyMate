<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/tools"
    android:id="@+id/coursesCardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/ten"
    android:clickable="false"
    android:foreground="?android:attr/selectableItemBackground"
    cardView:cardCornerRadius="@dimen/fifty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/ten"
        android:weightSum="4">

        <TextView
            android:id="@+id/courseTitleTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Course Name"
            android:textSize="@dimen/twinty" />


        <TextView
            android:id="@+id/courseCodeTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="" />
        <TextView
            android:id="@+id/courseCreditTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="" />
        <TextView
            android:id="@+id/courseTeacherTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="" />
    </LinearLayout>
</android.support.v7.widget.CardView>
