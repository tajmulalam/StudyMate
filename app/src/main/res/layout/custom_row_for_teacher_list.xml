<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/tools"
    android:id="@+id/teacherCardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/ten"
    android:clickable="false"
    android:foreground="?android:attr/selectableItemBackground"
    cardView:cardCornerRadius="@dimen/fifty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/ten"
        android:weightSum="6">

        <TextView
            android:id="@+id/teacherNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="TeacherName"
            android:textSize="@dimen/twinty" />


        <TextView
            android:id="@+id/teacherDesignationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/designation" />
        <TextView
            android:id="@+id/teacherMobileTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="mobile" />
        <TextView
            android:id="@+id/teacherEmailTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="email" />
        <TextView
            android:id="@+id/teacherSemesterTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/semesterTitle" />
        <LinearLayout
            android:paddingTop="@dimen/ten"
            android:layout_width="@dimen/two_hundred"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/teacherEditBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/five"
                android:background="@drawable/ic_text_bg_badge"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/teacherDeleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/five"
                android:background="@drawable/ic_text_bg_badge"
                android:src="@android:drawable/ic_delete" />

            <ImageButton
                android:id="@+id/callTeacherBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/five"
                android:background="@drawable/ic_text_bg_badge"
                android:src="@android:drawable/ic_menu_call" />

            <ImageButton
                android:id="@+id/msgTeacherBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_text_bg_badge"
                android:src="@android:drawable/ic_menu_send" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
